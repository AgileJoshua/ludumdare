RewriteEngine on
RewriteBase /1.0/

# Without .php #
RewriteCond %{REQUEST_FILENAME} !\.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
#RewriteRule ^([^/]+)(.*)$ $1.php?u=$2 [QSA,L]
RewriteRule ^([^/]+)(.*)$ $1.php$2 [QSA,L]

RewriteCond %{REQUEST_FILENAME} -f
RewriteRule . - [END]

# Bad URLs #
#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [QSA,END]

DirectoryIndex /index.php
